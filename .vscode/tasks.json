{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ui:dev",
            "type": "shell",
            "isBackground": true,
            "command": "npm",
            "args": [
                "run",
                "dev"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "^ {2}VITE v\\d+\\.\\d+\\.\\d+ {2}ready in \\d+ ms"
                }
            },
            "presentation": {
                "reveal": "always",
            }
        },
        {
            "label": "ui:build",
            "type": "shell",
            "command": [
                "npm",
                "run",
                "build",
                "&&",
                "npm",
                "run",
                "preview"
            ],
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": ""
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": "^  âžœ  Network: use --host to expose"
                }
            }
        }
    ]
}